<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_ten_loai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÊN LOẠI ĐỀ"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#2CA7E0"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:text="Loại Đề"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:text="Số Lượng"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:text="Độ Khó"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/txt_dd1d"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:gravity="center"
            android:text="1"/>

        <EditText
            android:id="@+id/txt_sl1d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:hint="Nhập số lượng"
            android:text="0"
            android:inputType="number" />
        <TextView
            android:id="@+id/txt_dk1d"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:text="Dễ"
            >
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/txt_dd1tb"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:gravity="center"
            android:text="1"/>

        <EditText
            android:id="@+id/txt_sl1tb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:hint="Nhập số lượng"
            android:text="0"
            android:inputType="number" />
        <TextView
            android:id="@+id/txt_dk1tb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:text="Trung bình"
            >
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/txt_dd1k"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:gravity="center"
            android:text="1"/>

        <EditText
            android:id="@+id/txt_sl1k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:hint="Nhập số lượng"
            android:text="0"
            android:inputType="number" />
        <TextView
            android:id="@+id/txt_dk1k"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#2CA7E0"
            android:textStyle="bold"
            android:text="Khó"
            >
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/btn_luu_loai"
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Lưu"
            android:textColor="#fff"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/btn_thoat_loai"
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Thoát"
            android:textColor="#fff"
            android:background="@drawable/button"/>
    </LinearLayout>

</LinearLayout>